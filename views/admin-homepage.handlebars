<p>This is the admin homepage</p>
<p id="error">The admin's id is : {{error}}</p>
<div class="container">
  <div class="buttons">
    <button onclick="window.location.href='/route1'">Route 1</button>
    <button onclick="window.location.href='/route2'">Route 2</button>
  </div>

  <div class="toggle-switch">
    <input type="checkbox" id="toggle" onclick="togglePanels()">
    <label for="toggle"></label>
  </div>

  <div class="panel-container">
    <div id="panel1" class="panel">Panel 1</div>
    <div id="panel2" class="panel">Panel 2</div>
  </div>
</div>

<script>
  function togglePanels() {
    const panel1 = document.getElementById('panel1');
    const panel2 = document.getElementById('panel2');
    const toggle = document.getElementById('toggle');

    if (toggle.checked) {
      panel1.style.display = 'none';
      panel2.style.display = 'block';
    } else {
      panel1.style.display = 'block';
      panel2.style.display = 'none';
    }
  }
</script>

