<div class="container mt-4">
    {{#each posts}}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <div class="h-flex justify-content-between">
                            <button class="btn btn-primary"><a href="/user/update/post/{{this._id}}" class="text-white">UPDATE</a></button>
                            <button class="btn btn-secondary"><a href="/user/delete/post/{{this._id}}" class="text-white">DELETE</a></button>
                        </div>
            </div>
        </div>
    {{/each}}

</div>