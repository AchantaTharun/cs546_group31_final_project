<div class="container">
  <h1 class="mt-5">Your Profile Page</h1>

  {{#if hasErrors}}
    <div class="alert alert-danger mt-3">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
        {{#if sendToLogin}}
          <a href="/trainer/login"> Go to Log in page</a>
        {{/if}}
      </ul>
    </div>
  {{/if}}

  <form
    action="/trainer/profile"
    method="POST"
    class="needs-validation"
    novalidate
  >

    <div class="row g-3">
      <div class="col-md-4">
        <label for="firstName">First Name:</label>
        <input
          type="text"
          class="form-control"
          id="firstName"
          name="firstName"
          value="{{trainer.firstName}}"
          required
        />
        <div class="invalid-feedback">First Name must be between 3 to 50
          characters long.</div>
      </div>

      <div class="col-md-4">
        <label for="lastName">Last Name:</label>
        <input
          type="text"
          class="form-control"
          id="lastName"
          name="lastName"
          value="{{trainer.lastName}}"
          required
        />
        <div class="invalid-feedback">Last Name must be between 3 to 50
          characters long.</div>
      </div>

      <div class="col-md-4">
        <label for="email">Email:</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="{{trainer.email}}"
          required
        />
        <div class="invalid-feedback">Please enter valid email</div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-md-12 mb-3">
        <label for="workoutType">Workout Type:</label>
        <select
          id="workoutType"
          name="workoutType"
          class="form-control"
          multiple
        >
          <option value="cardio">Cardio</option>
          <option value="strength">Strength</option>
          <option value="flexibility">Flexibility</option>
          <option value="sports">Sports</option>
          <option value="crossFit">CrossFit</option>
          <option value="bodyWeight">Body Weight</option>
        </select>
        <div class="invalid-feedback">Please select at least one workout type</div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-md-3">
        <label for="street">Street:</label>
        <input
          type="text"
          class="form-control"
          id="street"
          name="street"
          value="{{trainer.address.street}}"
          required
        />
        <div class="invalid-feedback">Street must be 3 to 50 characters long</div>
      </div>

      <div class="col-md-3">
        <label for="city">City:</label>
        <input
          type="text"
          class="form-control"
          id="city"
          name="city"
          value="{{trainer.address.city}}"
          required
        />
        <div class="invalid-feedback">City must be 3 to 50 characters long</div>
      </div>

      <div class="col-md-3">
        <label for="state">State:</label>
        <input
          type="text"
          class="form-control"
          id="state"
          name="state"
          value="{{trainer.address.state}}"
          required
        />
        <div class="invalid-feedback">State must be at least 2 characters long</div>
      </div>
      <div class="col-md-3">
        <label for="zip">ZIP Code:</label>
        <input
          type="text"
          class="form-control"
          id="zip"
          name="zip"
          value="{{trainer.address.zip}}"
          required
        />
        <div class="invalid-feedback">Please enter valid zip code of 5 digits</div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-md-4">
        <label for="phone">Phone:</label>
        <input
          type="tel"
          class="form-control"
          id="phone"
          name="phone"
          value="{{trainer.phone}}"
          required
        />
        <div class="invalid-feedback">Please enter your phone number</div>
      </div>
    </div>

    <br />

    <button class="btn btn-primary" type="submit">Edit</button><br />
  </form>
</div>

<script src="/public/js/trainer/trainerSignUpClient.js"></script>