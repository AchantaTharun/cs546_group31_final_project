<html lang="en" data-bs-theme="dark">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trainer Home</title>
    <link rel="stylesheet" href="/public/css/userProfile.css " />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/public/css/header.css" />
    <link rel="stylesheet" href="/public/css/trainerSession.css" />
    <link
      rel="icon"
      type="image/jpeg"
      href="/public/imgs/gymMate_fevicon.jpeg"
    />
  </head>

  <body>
    <nav class="navbar bg-body-tertiary fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand m-2" href="/trainer/dashboard">GymMate</a>
        <div class="d-flex flex-row-reverse">

          <form class="m-2" role="search" action="/logout" method="get">
            <button class="btn btn-danger" type="submit">Logout</button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-12">
          <div id="content" class="content content-full-width">
            <div class="profile">
              <div class="profile-header">
                <div class="profile-header-cover"></div>
                <div class="profile-header-content">
                  <div class="profile-header-img">
                    <img
                      src="https://bootdey.com/img/Content/avatar/avatar3.png"
                      alt=""
                    />
                  </div>
                  <div class="profile-header-info">
                    <h4 class="m-t-10 m-b-5">{{trainer.trainerName}}</h4>
                    <p class="m-b-10">Trainer</p>
                    <a
                      href="/trainer/profile"
                      class="btn btn-sm btn-info mb-2"
                    >Profile</a>
                  </div>
                </div>
                <ul class="profile-header-tab nav nav-tabs">
                  <li class="nav-item"><a
                      href="/trainer/dashboard"
                      class="nav-link_ active show"
                    >DASHBOARD</a></li>
                  <li class="nav-item"><a
                      href="/trainer/sessions"
                    >SESSIONS</a></li>
                  <li class="nav-item"><a
                      href="/trainer/events"
                      class="nav-link_"
                    >EVENTS</a></li>
                  <li class="nav-item"><a
                      href="/trainer/posts"
                      target="__blank"
                      class="nav-link_"
                    >POSTS</a></li>
                  <li class="nav-item"><a
                      href="/trainer/followers"
                      target="__blank"
                      class="nav-link_"
                    >FOLLOWERS</a></li>
                  <li class="nav-item"><a
                      href="https://www.bootdey.com/snippets/view/bs4-profile-friend-list"
                      target="__blank"
                    >FOLLOWING</a></li>
                </ul>
              </div>
            </div>
            <div
              class="profile-content"
              style="overflow-y: auto; max-height: calc(100vh - 120px);"
            >
              {{{body}}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/public/js/trainer/trainerHomeClient.js"></script>
    <script src="/public/js/trainerClient.js"></script>
    <script src="/public/js/editSession.js"></script>

  </body>

</html>